
public class Gugudan {
public static void main(String[] args) {
	
	for(int i=2; i<10; i++) {
		System.out.println("구구단" + i + "단");
		for (int j=1; j<10; j++) {
			System.out.printf("%d * %d = %d\n" ,i ,j , i*j);
			System.out.println();
				
			}
		}
	
	int dan=2;
	while(dan<10) {
		System.out.printf("구구단" + dan + "단");
		dan++;
		
		}
	int num=1;
	while(num< 10)
		System.out.printf("%d * %d = %d\n" ,dan ,num , dan*num);
		num++;
		System.out.println();
	}

}
	
