
public class Gugudan {
public static void main(String[] args) {
	
	for(int i=2; i<10; i++) {
		System.out.println("구구단" + i + "단");
		for (int j=1; j<10; j++) {
			System.out.printf("%d * %d = %d\n" ,i ,j , i*j);
			System.out.println();
				
			}
		}
	
	int i=2;
	while(i<10) {
		System.out.println("구구단" + i + "단");
		i++;
		
		}
	int j=1;
	while(j<10)
		System.out.printf("%d * %d = %d\n" ,i ,j , i*j);
		j++;
		System.out.println();
	}

}
	
